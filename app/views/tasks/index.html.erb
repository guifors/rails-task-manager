<h1>My tasks</h1>

<% @tasks.each do |task| %>
<p> <%= link_to task.title, task_path(task.id) %>

    <!-- <i class="fa fa-trash" aria-hidden="true"></i> -->

      <%= link_to task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } do %>
      <span>
        <i class="fa fa-trash" aria-hidden="true"></i>
      </span>
      <% end %>
</p>
<% end %>

<hr>

<%= link_to "Add a new task", new_task_path %>



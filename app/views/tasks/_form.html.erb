<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <% unless @task.new_record?%>
  <%= f.label :completed, "Completed" %>
  <%= f.check_box :completed %>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
